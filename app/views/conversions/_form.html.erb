<%= form_for @conversion, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :author, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Description (optional)", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area'  %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.file_field :csv_file, :class => 'text_field', rows: "5", cols: "50" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                conversions_path, :class => 'btn' %>
  </div>
<% end %>
